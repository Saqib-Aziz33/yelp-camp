<main class="container my-5">

        <h2 class="text-center display-5 fw-bold">New Campground</h2>

        <form action="/campgrounds" method="POST" novalidate class="new-form validated-form" enctype="multipart/form-data">
            <div class="my-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" required type="text" name="campground[title]" id="title" placeholder="Enter campground title">
                <div class="valid-feedback">seems goods</div>
                <div class="invalid-feedback">Feild is required</div>
            </div>
            <div class="my-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" required type="text" name="campground[location]" id="location" placeholder="eg, Phagwari, Rawalpindi">
                <div class="valid-feedback">seems goods</div>
                <div class="invalid-feedback">Feild is required</div>
            </div>
            <div class="my-3">
                <label for="formFile" class="form-label">Upload Images</label>
                <input class="form-control" type="file" id="formFile" name="image" multiple>
              </div>
            <div class="my-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">&dollar;</span>
                    <input class="form-control" required type="text" name="campground[price]" id="price" placeholder="0.00">
                    <div class="valid-feedback">seems goods</div>
                    <div class="invalid-feedback">Feild is required</div>
                </div>
            </div>
            <div class="my-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" required name="campground[description]" id="description" placeholder="Describe about your campground...." cols="30" rows="5"></textarea>
                <div class="valid-feedback">seems goods</div>
                <div class="invalid-feedback">Feild is required</div>
            </div>

            <button class="btn btn-primary">Add Campground</button>
        </form>

</main>

